<h1 class="text-center mt-4">Listing all categories</h1>
<div class="flickr_pagination">
  <%= will_paginate @categories, :container => false %>
</div>
<div class="container col-4">
  <% @categories.each do |category|%>
    <div class="card text-center shadow mb-5 bg-white rounded">
      <div class="card-body">
        <h5 class="card-title"><%= link_to "#{category.name}", category_path(category)%></h5>
        <p><small><%= pluralize(category.articles.count, "article")%></small></p>
      </div>
    </div>
  <%  end %>
<div class="flickr_pagination mb-4">
  <%= will_paginate @categories, :container => false %>
</div>
</div>