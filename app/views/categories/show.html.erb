<h1 class="text-center mt-4"><%= "Category: " + @category.name%></h1>

<% if logged_in? && current_user.admin? %>
  <span class="badge col-8 offset-md-2"><%= link_to "Edit Category", edit_category_path(@category) %></span>
<% end %>
<div class="flickr_pagination">
  <%= will_paginate @category_articles, :container => false %>
</div>
<%= render 'articles/article', obj: @category_articles %> 
